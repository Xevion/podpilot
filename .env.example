# Copy this file to .env and fill in the required values
# Commented out lines designate optional/defaulting options; otherwise, you need to fill them in

# [Hub]

DATABASE_URL=postgresql://user:password@host:port/database
# PORT=8080
# LOG_LEVEL=info
# SHUTDOWN_TIMEOUT=8

# [Agent]

TAILSCALE_AUTHKEY=tskey-auth-YOUR-KEY-HERE
HUB_WEBSOCKET_URL=ws://localhost:8080/ws/agent
# TAILSCALE_IP=0.0.0.0
# TAILSCALE_HOSTNAME=podpilot-agent
# TAILSCALE_TAGS=tag:podpilot-agent

# SSH access over Tailscale (optional)
# Provide SSH public keys for key-based authentication (newline-separated for multiple keys)
# Supports GitHub username fetching: use 'github.com/username' to fetch keys from GitHub
# Keys are deduplicated automatically. Mix GitHub usernames and regular SSH keys freely.
# Alternative: mount authorized_keys file with: -v ~/.ssh/authorized_keys:/root/.ssh/authorized_keys:ro
# Examples:
#   SSH_AUTHORIZED_KEYS=github.com/Xevion
#   SSH_AUTHORIZED_KEYS=github.com/Xevion\nssh-ed25519 AAAA... custom-key
# SSH_AUTHORIZED_KEYS=
# APP_TYPE=a1111
# AGENT_BIN=/app/podpilot-agent
# AGENT_SOURCE=embedded
# AGENT_DOWNLOAD_URL=https://github.com/xevion/podpilot/releases/latest/download/podpilot-agent
# STATUS_PORT=8081
# HOSTNAME=
# PROVIDER_TYPE=local
# PROVIDER_INSTANCE_ID=