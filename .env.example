# Copy this file to .env and fill in the required values
# Commented out lines designate optional/defaulting options; otherwise, you need to fill them in

# [Hub]

DATABASE_URL=postgresql://user:password@host:port/database
# PORT=80
# LOG_LEVEL=info
# SHUTDOWN_TIMEOUT=8

# Tailscale OAuth credentials
# Requires scope `auth_keys` (write) + tag `tag:podpilot`
# HUB_TAILSCALE_CLIENT_ID=k1AbCd2EfGh3
# HUB_TAILSCALE_CLIENT_SECRET=tskey-client-k1AbCd2EfGh3-123abc

# [Agent]

# Tailscale auth key for agents (required for development)
# Create with Ephemeral, Reusable + `tag:podpilot`
AGENT_AUTHKEY=tskey-auth-YOUR-AGENT-KEY-HERE

HUB_WEBSOCKET_URL=ws://ether-wsl:8080/ws/agent
# STATUS_PORT=8081
# PROVIDER_TYPE=local
# PROVIDER_INSTANCE_ID=

# SSH access (optional)
# SSH_AUTHORIZED_KEYS=github.com/your-username

# App configuration (set by Dockerfile, rarely needs override)
# APP_TYPE=a1111
# AGENT_BIN=/app/podpilot-agent
# AGENT_SOURCE=embedded
# AGENT_DOWNLOAD_URL=https://github.com/xevion/podpilot/releases/latest/download/podpilot-agent